/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
} 
.input-placeholder,.textarea-placeholder{
  color: #b8b8b8;
  font-size:30rpx;
}
button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  margin: 0;
  padding: 0;
  position: relative;
}


/*授权样式*/
.mask{
  position: fixed;
  top:0;
  left:0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 999999999999;
}
.modal-content{
  display: flex;
  flex-direction: column;
  width: 72%;  
  background-color: #fff;
  border-radius: 32rpx;
  position: relative;
  margin-bottom: 160rpx;
}
.modal-cancle{
  position: absolute;
  top:16rpx;
  left:16rpx;
  width: 54rpx;
  height: 54rpx;
}
.modal-cancle image{
  width: 100%;
  height:100%;
}
.modal-logo{
  margin: 100rpx auto 80rpx;
  width: 180rpx;
  height: 180rpx;
}
.modal-title{
  text-align: center;
  margin-bottom: 32rpx;
}
.modal-icon{
  margin: 80rpx auto;
}
.modal-logo image{
  width: 100%;
  height: 100%;
  border: 6rpx solid #f99303;
  border-radius: 32rpx;
}
.modal-title image{
  width: 80%;
  height: 40rpx;
  display: block;
  margin: 0 auto;
}
.modal-btns{
  margin: 48rpx 48rpx 80rpx;
  text-align: center;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-btn{
  flex: 1;
  border-radius: 48rpx;
  margin: 0 24rpx;
  background-color: #f99303;
  color: #fff;
}
/*提示框*/
.warn{
  width: 96%;
  position: fixed;
  top: 0;
  background-color: #e75e58;
  font-size: 1rem;
  color: #fff;
  z-index: 99999;
  text-align: center;
  border-radius: 0.2rem;
  min-height: 1.4rem;
  line-height: 1.4rem;
  left: 2%;
}
