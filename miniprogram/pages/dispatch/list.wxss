.head{
  background-color: #f99303;
  height: 80rpx;
}
.content{
  position: relative;
  top: -40rpx;
  padding:0 40rpx;
}
.card{
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  margin: 30rpx 0;
}
.card:first-child{
  margin:0;
}
.card-title{
  flex:1;
  font-size: 36rpx;
}
.card-des{
  text-align: right;
}
.card-type{
  display: inline-block;
  color:#fff;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding:0 10rpx;
  border-radius: 10rpx;
}
.type1{
  background-color: #F9B41B;
}
.type2{
  background-color: #F04124;
}
.card-status{
  border-radius: 10rpx;
  display: inline-block;  
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding:0 10rpx;
  margin-left:10rpx;
}
.status1{
  border:1rpx solid #F9B41B;
  color: #F9B41B;
}
.status2{
  border:1rpx solid #379AD4;
  color: #379AD4;
}
.status3{
  border:1rpx solid #777777;
  color: #777777;
}
.card-time{
  font-size: 30rpx;
  margin-top: 10rpx;
}