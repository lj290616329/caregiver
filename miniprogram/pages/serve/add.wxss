.head{
  background-color: #fff;
  padding: 40rpx;
  display: flex;
  justify-items: center;
  align-items: center;
}
.head-title{
  flex:1;
}
.head-item:first-child{
  margin-bottom: 10rpx;
}
.head-title-name{
  color:#777;
  font-size:30rpx;
}
.head-title-des{
  font-size:34rpx;
  padding-left:10rpx;
}

.head-des{
  text-align: right;
}

.head-type{
  padding:5rpx 5rpx;
  color:#fff;
  font-size:30rpx;
  display: inline-block;
  border-radius: 10rpx;
}
.type1{
  background-color: #F04124;
}
.type2{
  background-color: #F9B41B;
}
.head-time{
  font-size:30rpx;
  color:#6a6a6a;
}

.content{
  margin-top:10rpx;
  background-color: #fff;
  padding:40rpx;
}
.form-title{
  display: flex;
  align-items: center;
  font-size:36rpx;
}
.form-title image{
  width:48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
.form-item{
  margin:24rpx 0;
  display: flex;
  justify-content:space-between;
  flex-wrap:wrap;
}
.form-tag{
  font-size: 30rpx;
  display: inline-block;
  margin-bottom:24rpx;
  border:1rpx solid #f99303;
  color:#777;
  padding:5rpx 24rpx;
  border-radius: 15rpx;
}

.form-item textarea{
  width: 100%;
  border:1rpx solid #f99303;
  padding:24rpx;
  border-radius: 15rpx;
}
.form-item text{
  padding-left:20rpx;
  position: relative;
}
.form-item text:after{
  content: ' ';
  height: 66%;
  width:6rpx;
  background-color: #f99303;
  border-radius: 6rpx;
  position: absolute;
  top:22%;
  left:0;
}
.form-upload{
  width: 192rpx;
  height: 152rpx;
  border:4rpx solid #DBDBDB;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom:24rpx;
}

.item-img{
  width:200rpx;
  height:160rpx;
  border-radius: 5rpx;
  margin-bottom:24rpx;
}
.form-upload image{
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  display: inline-block;
}
.form-btn{
  display: inline-block;
  height: 70rpx;
  width: 180rpx;
  border-radius: 15rpx;
  background-color: #f99303;
  color: #fff;
  font-size: 36rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 70rpx;
}
