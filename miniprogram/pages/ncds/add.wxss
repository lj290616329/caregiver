/* miniprogram/pages/ncds/add.wxss */
page{
  background-color: #fff;
  font-size: 30rpx;
}

.card{
  padding:20rpx 30rpx;
}
.card-title{
  font-size: 36rpx;
  color: #333333;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.card-type{
  color: #777777;
  font-size: 32rpx;
  padding-left: 16rpx;
  position: relative;
  height: 34rpx;
  line-height: 34rpx;
  margin-top: 24rpx;
  margin-bottom: 10rpx;
}
.card-type:first-child{
  margin-top:0;
}
.card-type::before{
  position: absolute;
  left:0;
  top:5rpx;
  content: "";
  width: 8rpx;
  height: 24rpx;
  background-color: #f99303;
}


.radio-box,.check-box{
  padding: 10rpx 0;
}
.radio-item,.check-item{
  display: inline-block;
  vertical-align: middle;
  margin-top:20rpx;
}
.radio-title{
  margin-right:20rpx;
}
.radio-lable,.check-lable{
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.radio-lable text,.check-lable text{
  margin-left:20rpx;
}
.lable-sup{
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #777;
}
.card-des{
  display: flex;
  margin: 20rpx 0;
  align-items: center;
}
.des-title{
  font-size: 28rpx;
}
.des-val{
  background-color: #f5f5f5;
  padding: 0 10rpx;
  margin-left: 20rpx;
  font-size: 26rpx;
  position: relative;
}
.min-input{
  width:60rpx;
}
.lg-input{
  width:240rpx;
}
.des-unit{
  margin-left:10rpx;
}

.card-tag{
  display: inline-block;
  margin: 10rpx 12rpx;
  border-radius: 10rpx;
  padding: 6rpx 14rpx;
  
  line-height: 36rpx;
  height: 36rpx;
  border: solid 3rpx #777;
  color: #777;
  font-size: 28rpx;
}
.card-tag-active{
  background-color: #f99303;
  color:#fff;
  border-color: #f99303;
}
.card-item{
  overflow: hidden;
}
.item-title{
  margin-top:20rpx;
}
.card-submit-btn{  
  text-align: center;
  color:#fff;
  background-color: #f99303;
  font-size:30rpx;  
  margin: 40rpx auto;
  border-radius: 10rpx;
  width: 200rpx;
  height: 66rpx;
  line-height: 66rpx;
}
.card-line{
  border-bottom:solid 3rpx #f99303;
}
.picker-val{
  padding: 10rpx 50rpx 10rpx 0;
}
.picker-val::after{
  content:"";
  position:absolute;
  right: 20rpx;
  top: 20rpx;
  border-top:18rpx solid #777;
  border-left:18rpx solid transparent;
  border-right:18rpx solid transparent;
}